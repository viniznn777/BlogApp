{{#each erros}}
  <div class="alert alert-danger">{{text}}</div>

{{else}}
{{/each}}

<div class="card">
  <div class="card-body">
    <h4>Editar postagem: </h4>
    <form action="/admin/postagem/edit" method="post">
      <input type="hidden" name="id" value="{{postagem._id}}" />
      <label for="titulo">Título: </label>
      <input
        type="text"
        name="titulo"
        class="form-control"
        value="{{postagem.titulo}}"
      />
      <label for="slug">Slug: </label>
      <input
        type="text"
        name="slug"
        class="form-control"
        value="{{postagem.slug}}"
      />
      <label for="descricao">Descrição: </label>
      <input
        type="text"
        name="descricao"
        class="form-control"
        value="{{postagem.descricao}}"
      />
      <label for="conteudo">Conteúdo: </label>
      <textarea
        name="conteudo"
        class="form-control"
      >{{postagem.conteudo}}</textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria" class="form-select">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select><br />
      <button class="btn btn-success">Editar postagem</button>
    </form>
  </div>
</div>