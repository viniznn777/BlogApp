<h2>Lista de Postagens:</h2>
<hr />
<a href="/admin/postagens/add">
  <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>
        {{titulo}}
        <p>{{descricao}}</p>
        <p>{{conteudo}}</p>
        <small>Data: {{data}}</small><br />
        <small>Categoria: {{categoria.nome}}</small><br />
        <a href="/admin/postagens/edit/{{_id}}"><button
            class="btn btn-success mt-3"
          >Editar postagem</button></a>
        <a href="/admin/postagens/deletar/{{_id}}"><button
            class="btn btn-danger mt-3"
          >Deletar postagem</button></a>
      </h4>
    </div>
  </div>

{{else}}
  <p>Nenhuma postagem registrada</p>
{{/each}}